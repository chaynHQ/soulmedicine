{
  "name": "soulmedicine",
  "scripts": {
    "postdeploy": "rake postdeploy"
  },
  "env": {
    "ADMIN_BASIC_AUTH": {
      "required": true
    },
    "CONTENT_PREVIEW_MODE": {
      "required": true
    },
    "CLIENT_ROLLBAR_ACCESS_TOKEN": {
      "required": true
    },
    "EMAIL_FROM_ADDRESS": {
      "required": true
    },
    "ENABLED_LOCALES": {
      "required": true
    },
    "FIREBASE_API_KEY": {
      "required": true
    },
    "FIREBASE_PROJECT_ID": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAILGUN_SMTP_LOGIN": {
      "required": true
    },
    "MAILGUN_SMTP_PASSWORD": {
      "required": true
    },
    "MAILGUN_SMTP_PORT": {
      "required": true
    },
    "MAILGUN_SMTP_SERVER": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SERVER_ROLLBAR_ACCESS_TOKEN": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "STORYBLOK_TOKEN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 0
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis:hobby-dev",
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS_CACHE"
    },
    "mailgun:starter",
    "papertrail:choklad"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
