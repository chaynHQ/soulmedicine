{
  "extends": [
    "eslint-config-airbnb-base",
    "plugin:vue/recommended",
    "plugin:prettier/recommended"
  ],

  "env": {
    "browser": true
  },

  "rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
    "no-param-reassign": ["error", { "props": false }]
  },

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".vue"]
      }
    }
  }
}
